#!BuildIgnore: post-build-checks
Name:     @PACKAGE@
Version:  @VERSION@
Release:  @PACKAGE_REVISION@

Summary:  SIP Call Parking Server
License:  LGPL
Group:    Productivity/Telephony/SIP/Servers
Vendor:   SIPfoundry
Packager: SIPfoundry <sipx-dev@list.sipfoundry.org>
Url:      http://www.sipfoundry.org/sipXpark

BuildRequires: automake
BuildRequires: gcc-c++
BuildRequires: cppunit-devel
BuildRequires: openssl-devel >= 0.9.7a
BuildRequires: pcre-devel >= 4.5
BuildRequires: sipxportlib-devel >= %version
BuildRequires: sipxtacklib-devel >= %version
BuildRequires: sipxcalllib-devel >= %version
BuildRequires: sipxmediaadapterlib-devel >= %version
BuildRequires: sipxmedialib-devel >= %version
BuildRequires: sipxcommserverlib-devel  >= %version

Source:   %name-%version.tar.gz

Requires: sipxcalllib >= %version
Requires: sipxcommserverlib >= %version
Requires: chkconfig
Obsoletes: %{name}-devel

Prefix:    %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
TBD

%if %{_vendor} == suse
%debug_package
%endif

%prep
%setup -q

%build
%configure @SIPX_RPM_CONFIGURE_OPTIONS@
cp config.log %name.configlog
make %{_smp_mflags}

%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%attr(755,root,root) %{_sysconfdir}/init.d/sipxpark
%{_datadir}/sipxecs/cfinputs/plugin.d/sipxpark.cf
%config(noreplace) %attr(755,sipx,sipx) %{_localstatedir}/sipxdata/parkserver
%attr(755,root,root) %{_bindir}/sipxpark

%pre

%post
setcap 'CAP_SYS_RESOURCE=+ep' %{_bindir}/sipxpark
if grep -q :on <<<`/sbin/chkconfig sipxpark --list 2>&1`; then
    /sbin/chkconfig sipxpark reset
fi
