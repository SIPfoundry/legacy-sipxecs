<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="sipxedgerpcManager" class="org.springframework.aop.framework.ProxyFactoryBean" parent="abstractDao">
    <property name="proxyInterfaces">
      <value>org.sipfoundry.sipxconfig.sipxedgerpc.SipxedgerpcManager</value>
    </property>
    <property name="target">
      <ref local="sipxedgerpcManagerImpl" />
    </property>
  </bean>

  <bean id="sipxedgerpcManagerImpl" class="org.sipfoundry.sipxconfig.sipxedgerpc.SipxedgerpcManagerImpl">
    <property name="settingsDao">
      <bean parent="beanWithSettingsDao">
        <property name="target">
          <bean parent="beanWithSettingsDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.sipxedgerpc.SipxedgerpcManagerSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>
  
  <bean id="sipxedgerpcSettings" class="org.sipfoundry.sipxconfig.sipxedgerpc.SipxedgerpcManagerSettings" parent="settingsBean">
  </bean>
  
  <bean id="sipxedgerpcFeatureHook" class="org.sipfoundry.sipxconfig.web.plugin.SipxedgerpcFeatureHook" />  
</beans>
