<?xml version="1.0"?>
<!DOCTYPE model PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN"
  "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>DEBUG</value>
      </option>
      <option>
        <value>INFO</value>
      </option>
      <option>
        <value>NOTICE</value>
      </option>
      <option>
        <value>WARNING</value>
      </option>
      <option>
        <value>ERR</value>
      </option>
      <option>
        <value>CRIT</value>
      </option>
      <option>
        <value>ALERT</value>
      </option>
      <option>
        <value>EMERG</value>
      </option>
    </enum>
  </type>
  <type id="switch">
    <boolean>
      <true>
        <value>true</value>
      </true>
      <false>
        <value>false</value>
      </false>
    </boolean>
  </type>
  <type id="offlineType">
    <enum>
      <option>
        <value>bounce</value>
      </option>
      <option>
        <value>drop</value>
      </option>
      <option>
        <value>store</value>
      </option>
      <option>
        <value>store_and_bounce</value>
      </option>
      <option>
        <value>store_and_drop</value>
      </option>
    </enum>
  </type>
  <type id="requiredNonRootPort">
    <integer min="1025" max="65535" required="yes"/>
  </type>
  <group name="settings" advanced="yes">
    <setting name="watcher-address" hidden="yes">
      <type>
        <string required="yes" />
      </type>
      <value></value>
    </setting>
    <setting name="enable-presence">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="watcher-port">
      <type refid="requiredNonRootPort"/>
      <value>5064</value>
    </setting>
    <setting name="log.level">
      <type refid="loglevel" />
      <value>NOTICE</value>
    </setting>
    <setting name="console">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="openfire-xml-rpc-port">
      <type refid="requiredNonRootPort"/>
      <value>9094</value>
    </setting>
    <setting name="openfire-xml-rpc-vcard-port">
      <type refid="requiredNonRootPort"/>
      <value>9099</value>
    </setting>    
    <setting name="locale" hidden="yes">
      <type>
        <string required="yes" />
      </type>
      <value>en</value>
    </setting>
  </group>
  <group name="ofproperty">
    <setting name="register.inband" hidden="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="register.password" hidden="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.proxy.port">
      <type refid="requiredNonRootPort"/>
      <value>7777</value>
    </setting>
    <setting name="xmpp.proxy.enabled">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.proxy.externalip">
      <type>
        <string/>
      </type>
      <value></value>
    </setting>
    <setting name="xmpp.pep.enabled">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="route.all-resources">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="rss.enabled" advanced="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="update.notify-admins" hidden="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="update.service-enabled" hidden="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.audit.active" advanced="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.audit.logdir" advanced="yes">
      <type>
        <string/>
      </type>
      <value>/opt/openfire/audit</value>
    </setting>
    <setting name="xmpp.audit.message" advanced="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.audit.presence" advanced="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.client.idle" advanced="yes">
      <type>
        <integer min="-1" />
      </type>
      <value>0</value>
    </setting>
    <setting name="xmpp.offline.type" advanced="yes">
      <type refid="offlineType" />
      <value>store</value>
    </setting>
    <setting name="xmpp.offline.quota" advanced="yes">
      <type>
        <integer />
      </type>
      <value>102400</value>
    </setting>
    <setting name="xmpp.privateStorageEnabled" advanced="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.server.certificate.accept-selfsigned" hidden="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.server.certificate.selfsigned" hidden="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.server.permission" hidden="yes">
      <type>
        <string/>
      </type>
      <value>whitelist</value>
    </setting>
    <setting name="xmpp.server.session.idle" hidden="yes">
      <type>
        <string/>
      </type>
      <value>-1</value>
    </setting>
    <setting name="xmpp.server.socket.active" hidden="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="xmpp.server.tls.enabled" hidden="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.session.conflict-limit" hidden="yes">
      <type>
        <string/>
      </type>
      <value>0</value>
    </setting>
    <setting name="xmpp.socket.plain.active" hidden="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.socket.ssl.active" hidden="yes">
      <type refid="switch" />
      <value>true</value>
    </setting>
    <setting name="xmpp.socket.ssl.keypass" hidden="yes">
      <type>
        <string/>
      </type>
      <value>changeit</value>
    </setting>
  </group>
  <group name="openfire-server-to-server">
    <setting name="enabled">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="port">
      <type refid="requiredNonRootPort"/>
      <value>5269</value>
    </setting>
    <setting name="disconnect-on-idle" advanced="yes">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="idle-timeout" advanced="yes">
      <type>
        <integer required="yes" />
      </type>
      <value>3600</value>
    </setting>
    <setting name="any-can-connect">
      <type refid="switch" />
      <value>false</value>
    </setting>
    <setting name="allowed-servers">
      <type>
        <string>
          <pattern>[a-zA-Z0-9/._-]+(:[1-9]\d{3,4}){0,1}(,\s*[a-zA-Z0-9/._-]+(:[1-9]\d{3,4}){0,1})*</pattern>
        </string>
      </type>
    </setting>
    <setting name="disallowed-servers">
      <type>
        <string>
          <pattern>[a-zA-Z0-9/._-]+(:[1-9]\d{3,4}){0,1}(,\s*[a-zA-Z0-9/._-]+(:[1-9]\d{3,4}){0,1})*</pattern>
        </string>
      </type>
    </setting>
  </group>
  <group name="message-logging">
    <setting name="enabled">
      <type refid="switch" />
      <value>false</value>
    </setting>
  </group>
</model>
