<?xml version="1.0" encoding="UTF-8" ?>

<!-- Preflight Build Script  -->

<project name="preflight" default="launcher" basedir="." xmlns:cpptasks="antlib:org.sf.net.antcontrib.cpptasks">

  <patternset id="test.classes" excludes="**"/>
  <property name="top.build.dir" value="${basedir}/.."/>
  <property name="build.dir" value="${top.build.dir}/preflight"/>
  <property name="one-jar.dist.dir" value="${build.dir}/dist"/>
  <property name="compiler" value="${cc}"/>

  <import file="ant-targets.xml"/>

  <property name="preflight.lib.dir" value="${lib.dir}/preflight"/>

  <path id="base.path" >
    <pathelement location="${dnsjava.jar}"/>
    <pathelement location="${CommonsCli.jar}"/>
    <pathelement location="${CommonsNet.jar}"/>
    <pathelement location="${JainSipApi.jar}"/>
    <pathelement location="${JainSipRi.jar}"/>
    <pathelement location="${swt.jar}"/>
    <pathelement location="${junit.jar}"/>
    <pathelement location="${log4j.jar}"/>
  </path>
  <property name="classpath" refid="base.path" />

  <!-- J A R -->
  <target name="jar" depends="compile" description="create jar file" >
    <taskdef name="one-jar" classname="com.simontuffs.onejar.ant.OneJarTask" classpath="${one-jar.jar}" onerror="report"/>
    <one-jar destfile="${build.dir}/dist/preflight.jar" manifest="${src.dir}/preflight.mf" >
      <main>
        <fileset dir="${classes.dir}" >
          <include name="**/*.class" />
        </fileset>
      </main>
      <lib>
        <fileset file="${dnsjava.jar}" />
        <fileset file="${CommonsCli.jar}" />
        <fileset file="${CommonsNet.jar}" />
        <fileset file="${JainSipApi.jar}" />
        <fileset file="${JainSipRi.jar}" />
        <fileset file="${swt.jar}" />
        <fileset file="${log4j.jar}" />
      </lib>
      <binlib>
        <fileset dir="${src.dir}/lib" >
          <include name="*.dll" />
        </fileset>
      </binlib>
      <fileset dir="${src.dir}">
        <include name="icons/**"/>
      </fileset>
    </one-jar>
  </target>

  <!-- L A U N C H E R S -->
  <target name="launcher" depends="jar" description="create native launchers">
    <antcall target="posix-launcher"/>
    <antcall target="windows-launcher"/>
    <antcall target="jre-missing"/>
    <antcall target="nsis-missing"/>
  </target>

  <target name="posix-launcher" depends="jar" description="create native posix command line launcher" >
    <taskdef resource="cpptasks.tasks" classpath="${cpptasks.jar}"/>
    <typedef resource="cpptasks.types" classpath="${cpptasks.jar}"/>
    <cc outfile="${build.dir}/dist/preflight">
      <fileset dir="${src.dir}/src/main/native/posix" includes="*.c"/>
      <defineset>
        <define name="JAVA" value='"${java}"'/>
        <define name="SIPX_LIBDIR" value='"${preflight.lib.dir}"'/>
      </defineset>
    </cc>
  </target>

  <!-- Build Windows Installer if Windows JRE and NSIS are installed -->
  <target name="windows-launcher" if="has.windows.prerequisites" depends="jar, test-for-windows-prerequisites"
          description="create native windows launcher and installer" >
    <taskdef name="launch4j" classname="net.sf.launch4j.ant.Launch4jTask" classpath="${launch4j.jar}:${xstream.jar}" />
    <copy file="${src.dir}/Preflight.xml.in" tofile="${build.dir}/dist/Preflight.xml"/>
    <replace file="${build.dir}/dist/Preflight.xml">
      <replacefilter token="@src.dir@" value="${src.dir}"/>
      <replacefilter token="@build.dir@" value="${build.dir}"/>
    </replace>
    <launch4j configFile="${build.dir}/dist/Preflight.xml" />

    <taskdef name="nsis" classname="net.sf.nsisant.Task" classpath="${nsisant.jar}"/>
    <copy file="${src.dir}/Preflight.nsi.in" tofile="${build.dir}/dist/Preflight.nsi"/>
    <replace file="${build.dir}/dist/Preflight.nsi">
      <replacefilter token="@src.dir@" value="${src.dir}"/>
      <replacefilter token="@lib.src@" value="${lib.src}"/>
      <replacefilter token="@build.dir@" value="${build.dir}"/>
    </replace>
    <nsis script="${build.dir}/dist/Preflight.nsi"/>
  </target>

  <!-- I N S T A L L -->
  <target name="install">
    <antcall target="posix-install"/>
    <antcall target="windows-install"/>
  </target>

  <target name="posix-install">
    <!-- Posix Launcher -->
    <mkdir dir="${dest.dir}${preflight.lib.dir}"/>
    <copy file="${build.dir}/dist/preflight.jar" todir="${dest.dir}${preflight.lib.dir}"/>
    <copy file="${build.dir}/dist/preflight" todir="${dest.dir}${bin.dir}"/>
    <chmod file="${dest.dir}${bin.dir}/preflight" perm="ugo+x" />
  </target>
    
  <target name="windows-install" if="has.windows.prerequisites" depends="test-for-windows-prerequisites">
    <!-- Windows Installer -->
    <copy file="${build.dir}/dist/preflight_installer.exe" todir="${dest.dir}${conf.dir}/preflight"/>
    <chmod file="${dest.dir}${conf.dir}/preflight/preflight_installer.exe" perm="ugo+x" />
  </target>

  <target name="uninstall">
    <delete file="${dest.dir}${bin.dir}/preflight"/>
    <delete file="${dest.dir}${preflight.lib.dir}/preflight.jar"/>
    <delete file="${dest.dir}${conf.dir}/preflight/preflight_installer.exe"/>
  </target>

  <target name="test-for-windows-prerequisites" depends="test-for-jre, test-for-nsis">
    <condition property="has.windows.prerequisites">
      <and>
        <isset property="has.jre"/>
        <isset property="has.nsis"/>
      </and>
    </condition>
  </target>

  <target name="test-for-jre">
    <condition property="has.jre">
      <available file="${lib.src}/java-sun-windows"/>
    </condition>
  </target>

  <target name="test-for-nsis">
    <condition property="has.nsis">
      <or>
        <available file="/bin/makensis"/>
        <available file="/usr/bin/makensis"/>
        <available file="/usr/local/bin/makensis"/>
      </or>
    </condition>
  </target>

  <target name="jre-missing" unless="has.jre" depends="test-for-jre">
    <echo>
      Creation of Windows installer was skipped due to missing
      Windows Java Runtime.  See project README document for more
      information regaring JRE requirements.
    </echo>
  </target>

  <target name="nsis-missing" unless="has.nsis" depends="test-for-nsis">
    <echo>
      Creation of Windows installer was skipped due to missing
      NSIS (Nullsoft Scriptable Install System) package.  See
      project README document for more information regaring NSIS.
    </echo>
  </target>

</project>
