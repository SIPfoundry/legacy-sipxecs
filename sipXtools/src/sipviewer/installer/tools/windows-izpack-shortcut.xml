<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="SIPFOUNDRY"
                location="startMenu"/>
  <shortcut
    name="sipviewer"
    target="javaw"
    commandLine="-jar &quot;$INSTALL_PATH&quot;/sipviewer.jar"
    workingDirectory="$INSTALL_PATH"
    description="SIP Trace Viewer"
    iconIndex="0"
    initialState="noShow"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base_WINDOWS"/>
    <os family="windows"/>
  </shortcut>

  <shortcut
    name="uninstall sipviewer"
    target="javaw"
    commandLine="-jar &quot;$INSTALL_PATH&quot;/Uninstaller/uninstaller.jar"
    workingDirectory="$INSTALL_PATH"
    description="SIP Trace Viewer"
    iconIndex="0"
    initialState="noShow"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base_WINDOWS"/>
    <os family="windows"/>
  </shortcut>

   
   
