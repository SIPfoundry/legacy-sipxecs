def execNext(command, arglist) :
    screen.finish()
    commandView="\nExecuting:\n  %s %s\n" % (command, ' '.join(arglist))
    log_printout(commandView)
    log_close()
    time.sleep (1)
    print commandView
    execArgs=[command]
    execArgs.extend(arglist)
    os.execvp(command, execArgs)

def cleanExit () :
    log_close()
    screen.finish()
    raise SystemExit


