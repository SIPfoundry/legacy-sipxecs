%{upgrade_archive_dir}/%{this_archive}
%{upgrade_archive_dir}/%{name}-previous.tgz

%files devel
%defattr(644,root,root,755)
%doc %{_datadir}/doc/sipx/%name/*

%pre
sipx-upgrade -p sipxpbx -c

%post
sipx-upgrade -p sipxpbx -u --bdir %{_bindir}  --ddir %{_datadir} --cdir %{_sysconfdir} --sdir %{_localstatedir}
rm -f %{_bindir}/backup-mailstore.sh
rm -f %{_bindir}/restore-configs.sh 
rm -f %{_bindir}/restore-mailstore.sh
rm -f %{_bindir}/backup-configs.sh
rm -f %{_localstatedir}/sipxdata/tmp/processAlias.dat
rm -f %{_localstatedir}/sipxdata/tmp/locked.lck
rm -rf %{_datadir}/www/cgi-bin/processmonitor

%define current_archive %{upgrade_archive_dir}/%{name}-current.tgz
%define previous_archive %{upgrade_archive_dir}/%{name}-previous.tgz
if [ -f %{current_archive} ]; then
  mv %{current_archive} %{previous_archive}
fi
mv %{upgrade_archive_dir}/%{this_archive} %{current_archive}

pkg-upgrade --previous %{previous_archive} --current %{current_archive}

# On an HA Slave system the new sipxwatchdog-config.in needs to be updated to include the 
# HA Master as an allowed peer.  (On new installations this is done by the install wizard.)
grep "VOICEMAIL_SERVER_HOSTNAME=" %{_sysconfdir}/sipxpbx/config.defs | grep MY_FULL_HOSTNAME > /dev/null
if [ $? != "0" ]; then
  # This system is an HA Slave.  The HA Master's hostname must be inserted into sipxwatchdog-config.in
  sed -i "s/SIP_WATCHDOG_XMLRPC_PEERS : \${MY_FULL_HOSTNAME}/# SIP_WATCHDOG_XMLRPC_PEERS : \${MY_FULL_HOSTNAME}/" \
    %{_sysconfdir}/sipxpbx/sipxwatchdog-config.in
  master_hostname=`grep VOICEMAIL_SERVER_HOSTNAME %{_sysconfdir}/sipxpbx/config.defs | cut -d"=" -f2`
  sed -i "s/# SIP_WATCHDOG_XMLRPC_PEERS : HA_MASTER_HOSTNAME/SIP_WATCHDOG_XMLRPC_PEERS : $master_hostname/" \
    %{_sysconfdir}/sipxpbx/sipxwatchdog-config.in
fi

# Arrange for sipX to be started every time the system starts up.
# It starts in runlevels 3 and 5.
if [ -x /sbin/chkconfig ]; then
  # RedHat / Fedora
  chkconfig --add sipxpbx
else
  # SuSE
  insserv sipxpbx
fi


%preun
# see http://fedoraproject.org/wiki/Packaging/ScriptletSnippets
if [ $1 = 0 ]; then
  /etc/init.d/sipxpbx stop &>/dev/null || :

  if [ -x /sbin/chkconfig ]; then
    # RedHat / Fedora
    chkconfig --del sipxpbx
  else
    # SuSE
    insserv -r sipxpbx
  fi
fi

%postun
# only restart when upgrade
# do not put in post section because other dependencies have not 
# run their post section yet.
if [ "$1" -ge "1" ]; then
  /etc/init.d/sipxpbx restart &>/dev/null || :
fi
