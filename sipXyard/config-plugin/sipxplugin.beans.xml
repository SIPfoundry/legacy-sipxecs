<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <!-- This is just an example of how to register new gateway -->
  <bean id="yardGatewayStandard" parent="abstractGatewayModel">
    <property name="beanId" value="gwYard" />
    <property name="label" value="Edge Server" />
    <property name="modelDir" value="yard" />
	<property name="vendor" value="yard" />
	<property name="dialPlanAware" value="false" />
	<property name="callerIdAware" value="false" />
	<property name="addressTransportAware" value="false" />
	<property name="locationAware" value="false" />
	<property name="sharedAware" value="false" />
	<property name="serialNumberPattern" value="" />
  </bean>

  <bean id="gwYard" class="org.sipfoundry.sipxconfig.gateway.yard.YardGateway" scope="prototype" parent="gwGeneric">
    <property name="addressManager" ref="addressManager"/>
    <property name="domainManager" ref="domainManager"/>
    <property name="featureManager" ref="featureManager"/>
    <property name="locationManager" ref="locationsManager"/>
  </bean>
</beans>