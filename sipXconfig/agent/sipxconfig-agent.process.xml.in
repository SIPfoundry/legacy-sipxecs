<?xml version="1.0"?>
<watchdog-process enable="true" xmlns="http://www.sipfoundry.org/sipX/schema/xml/watchdogprocess-00-01">
  <process_definitions>
    <group name="ConfigServer">
        <process name="Configuration Agent API">
            <dependentdelay wait="0" />
            <stdout file="/dev/null" />
            <stderr file="/dev/null" />
            <stdin  file="" />
    
            <start control="true">
                <execute command="@bindir@/sipxconfig-agent"
                         parameters=""
                         defaultdir="@SIPX_LOGDIR@" />
            </start>
    
            <!-- If no execute, then kill -->
            <stop control="true" />
    
            <!-- If no execute, then stop-start -->
            <restart control="false" />
    
        </process>
    </group>
  </process_definitions>
  <watchdog>
   <monitor>
      <!-- Configuration Agent - Enabling Distributed  Web admin UI  -->
      <monitor-process name="Configuration Agent API" restart="enable" max_restarts="3" report="enable" max_reports="3">
         <failure_contact method="email">@SIPXPBXUSER@@localhost</failure_contact>
      </monitor-process>
   </monitor>
  </watchdog>
</watchdog-process>
