<?xml version="1.0"?>
<watchdog-process enable="true" xmlns="http://www.sipfoundry.org/sipX/schema/xml/watchdogprocess-00-01">
  <process_definitions>
    <group name="CommServer" >
        <process name="SIPStatus">
            <dependentdelay wait="0" />
            <stdout file="/dev/null" />
            <stderr file="/dev/null" />
            <stdin  file="" />

            <start control="true">
                <execute command="/home/sipx/sipxecs/out-FC6/main//bin/sipstatus.sh"
                         parameters=""
                         defaultdir="/home/sipx/sipxecs/out-FC6/main//var/log/sipxpbx" />
            </start>

            <!-- If no execute, then kill -->
            <stop control="true" />

            <!-- If no execute, then stop-start -->
            <restart control="true" />

            <!-- <dependency>??</dependency> -->
        </process>
    </group>
  </process_definitions>
  <watchdog>
   <monitor>
      <monitor-process name="SIPStatus"
         restart="enable" max_restarts="3" report="enable" max_reports="3">
         <failure_contact method="email">sipx@localhost</failure_contact>
      </monitor-process>
   </monitor>
  </watchdog>
</watchdog-process>
