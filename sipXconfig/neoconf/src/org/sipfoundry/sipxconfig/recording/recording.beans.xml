<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="recordingSettings" class="org.sipfoundry.sipxconfig.recording.RecordingSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
    <property name="domainManager" ref="domainManager"/>
  </bean>

  <bean id="recording" class="org.sipfoundry.sipxconfig.recording.Recording">
    <property name="settingsDao">
      <bean parent="beanWithSettingDao">
        <property name="target">
          <bean parent="beanWithSettingDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.recording.RecordingSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="recordingConfiguration" class="org.sipfoundry.sipxconfig.recording.RecordingConfiguration">
    <property name="recording" ref="recording" />
  </bean>

</beans>
