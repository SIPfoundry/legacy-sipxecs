<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="registrarSettings" class="org.sipfoundry.sipxconfig.registrar.RegistrarSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
    <property name="aliasManager" ref="aliasManager"/>
  </bean>

  <bean id="registrar" class="org.sipfoundry.sipxconfig.registrar.Registrar">
    <property name="settingsDao">
      <bean parent="beanWithSettingDao">
        <property name="target">
          <bean parent="beanWithSettingDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.registrar.RegistrarSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="registrarConfiguration" class="org.sipfoundry.sipxconfig.registrar.RegistrarConfiguration">
    <property name="registrar" ref="registrar" />
  </bean>
  
  <bean id="registrarInit" class="org.sipfoundry.sipxconfig.registrar.RegistrarFeatureListener">
    <property name="registrar" ref="registrar" />
  </bean>

  <bean id="registrationContextImpl" class="org.sipfoundry.sipxconfig.commserver.RegistrationContextImpl">
    <property name="nodedb" ref="nodeDb"/>
  </bean>

  <alias name="registrationContext" alias="registrationContextImpl"/>

</beans>
