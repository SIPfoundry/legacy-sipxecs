<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="restServerSettings" class="org.sipfoundry.sipxconfig.restserver.RestServerSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
  </bean>

  <bean id="restServer" class="org.sipfoundry.sipxconfig.restserver.RestServer">
    <property name="settingsDao">
      <bean parent="beanWithSettingDao">
        <property name="target">
          <bean parent="beanWithSettingDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.restserver.RestServerSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="restServerConfiguration" class="org.sipfoundry.sipxconfig.restserver.RestConfiguration">
    <property name="restServer" ref="restServer" />
    <property name="velocityEngine" ref="velocityEngine"/>
  </bean>

</beans>
