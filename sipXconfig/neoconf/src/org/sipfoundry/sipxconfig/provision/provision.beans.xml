<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="provisionSettings" class="org.sipfoundry.sipxconfig.provision.ProvisionSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
    <property name="addressManager" ref="addressManager" />
    <property name="coreContext" ref="coreContext" />
  </bean>

  <bean id="provision" class="org.sipfoundry.sipxconfig.provision.Provision">
    <property name="settingsDao" ref="beanWithSettingsDao" />
  </bean>

</beans>
