<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>DEBUG</value>
      </option>
      <option>
        <value>INFO</value>
      </option>
      <option>
        <value>NOTICE</value>
      </option>
      <option>
        <value>WARNING</value>
      </option>
      <option>
        <value>ERR</value>
      </option>
      <option>
        <value>CRIT</value>
      </option>
      <option>
        <value>ALERT</value>
      </option>
      <option>
        <value>EMERG</value>
      </option>
    </enum>
  </type>
  <type id="audioformat">
    <enum>
      <option>
        <value>wav</value>
      </option>
      <option>
        <value>mp3</value>
      </option>
    </enum>
  </type>
  <type id="recordrate">
    <enum>
      <option>
        <value>8000</value>
      </option>
      <option>
        <value>16000</value>
      </option>
    </enum>
  </type>
  <type id="faxformat">
    <enum>
      <option>
        <value>pdf</value>
      </option>
      <option>
        <value>tiff</value>
      </option>
    </enum>
  </type>
  <group name="ivr">
    <setting name="log.level">
      <type refid="loglevel" />
      <value>NOTICE</value>
    </setting>
    <setting name="audio.format">
      <type refid="audioformat" />
      <value>wav</value>
    </setting>
    <setting name="record.rate">
      <type refid="recordrate" />
      <value>8000</value>
    </setting>
    <setting name="record.time">
      <type><integer /></type>
      <value>300</value>
    </setting>
    <setting name="fax.format">
      <type refid="faxformat" />
      <value>pdf</value>
    </setting>
    <setting name="ivr.publicHttpPort" advanced="yes">
      <type>
        <integer />
      </type>
      <value>8085</value>
    </setting>
    <setting name="ivr.httpPort">
      <type>
        <integer />
      </type>
      <value>8086</value>
    </setting>    
    <setting name="ivr.voiceMailExpiry" advanced="yes">
      <type>
        <integer min="0" />
      </type>
      <value>7</value>
    </setting>
    <setting name="ivr.nameDialPrefix" hidden="yes">
      <type>
        <string required="yes"/>
      </type>
      <value>11</value>
    </setting>
    <setting name="ivr.defaultTui" hidden="yes">
      <type>
        <string required="yes"/>
      </type>
      <value>stdui</value>
    </setting>
    
  </group>
</model>
