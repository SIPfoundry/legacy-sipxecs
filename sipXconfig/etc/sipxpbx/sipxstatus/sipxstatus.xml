<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>DEBUG</value>
      </option>
      <option>
        <value>INFO</value>
      </option>
      <option>
        <value>NOTICE</value>
      </option>
      <option>
        <value>WARNING</value>
      </option>
      <option>
        <value>ERR</value>
      </option>
      <option>
        <value>CRIT</value>
      </option>
      <option>
        <value>ALERT</value>
      </option>
      <option>
        <value>EMERG</value>
      </option>
    </enum>
  </type>
  <type id="true-false">
	<boolean>
		<true>
			<value>true</value>
		</true>
		<false>
			<value>false</value>
		</false>
	</boolean>
  </type>   
  <type id="nonRootPort">
    <integer min="1025" max="65535" required="yes"/>
  </type>
  <group name="status-config">
    <setting name="SIP_STATUS_TCP_PORT" advanced="yes">
      <type refid="nonRootPort"/>
      <value>5110</value>
    </setting>
    <setting name="SIP_STATUS_UDP_PORT" advanced="yes">
      <type refid="nonRootPort"/>
      <value>5110</value>
    </setting>
    <setting name="SIP_STATUS_HTTP_PORT" advanced="yes">
      <type refid="nonRootPort"/>
      <value>8100</value>
    </setting>
    <setting name="SIP_STATUS_HTTPS_PORT" hidden="yes">
      <type refid="nonRootPort"/>
      <value>0</value>
    </setting>
    <setting name="SIP_STATUS_LOG_LEVEL">
      <type refid="loglevel" />
      <value>NOTICE</value>
    </setting>
    <setting name="SIP_STATUS_AUTHENTICATE_ALGORITHM" hidden="yes">
      <type><string/></type>
    </setting>
    <setting name="SIP_STATUS_AUTHENTICATE_QOP" hidden="yes">
      <type><string/></type>
    </setting>
    <setting name="SIP_STATUS_MAX_EXPIRES" advanced="yes">
      <type><integer/></type>
    </setting>
    <setting name="SIP_STATUS_MIN_EXPIRES" advanced="yes">
      <type><integer/></type>
    </setting>
    <setting name="SIP_STATUS_LOG_CONSOLE" hidden="yes">
      <type><string/></type>
    </setting>
  </group>
  <group name="resource-limits" advanced="yes">
    <setting name="fd-soft">
      <type>
    	<integer/>
      </type>
      <value>32768</value>
    </setting> 
    <setting name="fd-hard">
      <type>
    	<integer/>
      </type>
      <value>65536</value>
    </setting>
    <setting name="core-enabled">
      <type refid="true-false"/>
      <value>false</value>
    </setting>       
  </group>  
</model>
