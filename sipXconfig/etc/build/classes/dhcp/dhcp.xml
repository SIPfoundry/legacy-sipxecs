<?xml version="1.0"?>
<!DOCTYPE model PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN"
  "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <group name="dhcpd-config">
    <setting name="subnet" >
      <type><ipaddr/></type>
    </setting>
    <setting name="netmask" >
      <type><ipaddr/></type>
      <value>255.255.255.0</value>
    </setting>
    <setting name="range_begin" >
      <type><ipaddr/></type>
    </setting>
   <setting name="range_end" >
      <type><ipaddr/></type>
    </setting>  
    <setting name="routers" >
      <type><string/></type>
    </setting>  
    <setting name="default_lease_time" >
      <type><integer/></type>
      <value>43200</value>
    </setting>
    <setting name="max_lease_time" >
      <type><integer/></type>
      <value>43200</value>
    </setting>
    <setting name="plcm_https_provisioning">
      <type>
        <boolean />
       </type>
       <value>0</value>
    </setting>
    <setting name="bria_https_provisioning">
      <type>
        <boolean />
      </type>
      <value>0</value>
    </setting>
 </group>
  <group name="dhcpd-unmanaged">
    <setting name="unmanaged">
      <type>
        <boolean />
      </type>
      <value>0</value>
    </setting>
    <setting name="dhcpd-server" >
      <type><ipaddr/></type>
    </setting>
 </group>
</model>
