Name: @PACKAGE@
Version: @VERSION@
Release: @PACKAGE_REVISION@

Summary: View SIP message call flow from a sipXecs system
License: LGPL
Group:    Productivity/Telephony/SIP/Utilities
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXtools

BuildRequires: automake
BuildRequires: java-devel >= 1.7
BuildRequires: sipxcommons >= %version

Source: %name-%version.tar.gz

Requires: sipxcommons >= %version

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
View SIP message call flow from a sipXecs system

%prep
%setup -q

%build
%configure @SIPX_RPM_CONFIGURE_OPTIONS@
cp config.log %name.configlog
make %{_smp_mflags} all

%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc  LICENSE README %name.configlog
%{_bindir}/sipviewer
%{_bindir}/tcpdump2siptrace
%dir %attr(755,sipx,sipx) %{_datadir}/java/sipXecs/sipXviewer
%attr(755,sipx,sipx) %{_datadir}/java/sipXecs/sipXviewer/sipviewer.jar
