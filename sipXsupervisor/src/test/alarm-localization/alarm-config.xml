<?xml version="1.0"?>
<alarm_server xmlns="http://www.sipfoundry.org/sipX/schema/xml/alarm-00-00">
   <settings>
      <language>fr</language>
      <actions>
         <log enabled="true">
            <file>sipXalarms.log</file>
         </log>
         <email enabled="false">
            <!-- Alarm notification emails will be sent from this address. -->
            <email-notification-addr>postmaster@${MY_FULL_HOSTNAME}</email-notification-addr>
            <!-- Alarm notification emails will be sent to each contact in this list. -->
            <contact>@SIPXPBXUSER@@localhost</contact>
         </email>
         <sms enabled="false">
            <!-- Alarm notification SMS will be sent from this address. -->
            <email-notification-addr>postmaster@${MY_FULL_HOSTNAME}</email-notification-addr>
            <!-- Alarm notification SMS will be sent to each contact in this list. -->
            <contact>@SIPXPBXUSER@@localhost</contact>
         </sms>
         <trap enabled="false"/>
      </actions>
   </settings>

</alarm_server>
