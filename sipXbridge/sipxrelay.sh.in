Action=RUN
Status=0
Args=""

while [ $# -ne 0 ]
do
    case ${1} in
        --configtest)
            Action=CONFIGTEST
            ;;

        --stop)
            Action=STOP
            ;;

        *)
            Args="$1"
            ;;
    esac           

    shift # always consume 1
done

CONFIG_FILES="\
  @SIPX_CONFDIR@/sipxrelay.xml \
  "

. @SIPX_LIBEXECDIR@/sipx-utils.sh

JavaCmd=`@SIPX_BINDIR@/sipx-config --java`
LibPath=`perl -e 'print join(":", @ARGV);' @SIPX_JAVADIR@/sipXbridge/*.jar @SIPX_JAVADIR@/sipXcommons/*.jar`
ClassPath=$LibPath

case ${Action} in
   RUN)
     echo $$ > @SIPX_RUNDIR@/sipxrelay.pid

     exec $JavaCmd -Dconf.dir=@SIPX_CONFDIR@  \
	 -Dsipxrelay.command=start \
	 -Djavax.net.ssl.trustStore=@PREFIX@/etc/sipxpbx/ssl/.authorities.jks 	\
	 -Djavax.net.ssl.trustStoreType=JKS 					\
	 -Djavax.net.ssl.keyStore=@PREFIX@/etc/sipxpbx/ssl/.ssl.keystore \
	 -Djetty.lib.dir=@SIPX_JAVADIR@/sipXconfig 	\
	 -Djetty.conf.dir=@PREFIX@/etc/sipxpbx 		\
	 -Djetty.x509.algorithm=SunX509 		\
	 -Dorg.apache.commons.logging.Log=org.apache.commons.logging.impl.Log4JLogger \
         -cp $ClassPath org.sipfoundry.sipxbridge.symmitron.SymmitronServer \
         $Args
     ;;

   STOP)
     sipx_stop sipxrelay @SIPX_RUNDIR@/sipxrelay.pid
     ;;

   CONFIGTEST)
     Status=0

     # Check that the log file is writable.
     logfile="@SIPX_LOGDIR@/sipxrelay.log"
     if [ -e $logfile -a ! -w $logfile ]
     then
	 echo "Log file '$logfile' exists but is not writable by user '@SIPXPBXUSER@'." >&2
	 Status=1
     fi
     exec $JavaCmd -Dconf.dir=@SIPX_CONFDIR@   \
	 -Dsipxrelay.command=configtest \
         -cp $ClassPath org.sipfoundry.sipxbridge.symmitron.SymmitronServer \
         $Args
     ;;

esac

exit $Status
